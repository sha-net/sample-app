apiVersion: v1
kind: Service
metadata:
  name: TEMPLATE-APP-NAME-lb
spec:
  type: LoadBalancer
  ports:
  - protocol: TCP
    port: 80
    targetPort: TEMPLATE-APP-PORT
---
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
    "name": "TEMPLATE-APP-NAME"
    },
    "spec": {
    "containers": [
        {
        "name": "TEMPLATE-APP-NAME",
        "image": "TEMPLATE-IMAGE",
        "ports": [
            {
                "containerPort": TEMPLATE-APP-PORT
            }
        ]
        }
    ]
    }
}
